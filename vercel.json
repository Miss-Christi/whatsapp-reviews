{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      },
      {
        "src": "backend/*.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/app.py"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/$1"
      }
    ]
  }
  